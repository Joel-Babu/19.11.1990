public class ParameterMaintenancePage extends BasePage {
	CommonFunctions common = PageFactory.initElements(this.getDriver(), CommonFunctions.class);
	public Logger log = LogManager.getLogger(LoginPage.class);
	SQLWrapper sql = new SQLWrapper(log);
	LoginPageObjects loginPageObjects;
	CommonFunctions objCommonFunctions;
	static ExtentReportsScreenshotCode ScreenShotUtil;
	static WebDriverWait wait;
	String image;

	public ParameterMaintenancePage() {
		// TODO Auto-generated constructor stub
		super();
	}
	

	/**
	  Search option in Parameter Maintenance
	 */

	public void Search(ParameterMaintenanceObjects ParameterMaintenanceObjects,WebElement tradingDepartment,String tradingDepartmentdropdown, ExtentTest extentTest) 
			throws Exception {

		SwitchFrame(ParameterMaintenanceObjects.frame);
		try 
		{
			waitFor(3);
			selectByVisibleText(ParameterMaintenanceObjects.tradingDepartment,tradingDepartmentdropdown);
		}
		catch (Exception e) 
		{
			image = TakeScreenshot(extentTest, "UIResult");
			System.out.println("Exception occured while Fetching Data");
			e.printStackTrace();
			extentTest.log(LogStatus.FAIL, "Failed to click the Search button" ,image);
		}
	}
	
	/*
	 * 
	 * 
	 */

	public void Add_ParametermaintenanceDetails(ParameterMaintenanceObjects objParameterMaintenanceObjects,WebElement Selectingdepttogiveparametermaintenance,String tradingDepartmentdropdown,WebElement type,String typedropdown,
			WebElement Selectingoperationtogiveparametermaintenance,String operation,ExtentTest extentTest) throws Exception {

		//SwitchFrame(ActivityObjects.frame);
		try 
		{

			selectByVisibleText(ParameterMaintenanceObjects.Selectingdepttogiveparametermaintenance,tradingDepartmentdropdown);
			waitFor(3);
			selectByVisibleText(ParameterMaintenanceObjects.Selectingtypetogiveparametermaintenance,typedropdown);
			waitFor(3);
			selectByVisibleText(ParameterMaintenanceObjects.Selectingoperationtogiveparametermaintenance,operation);


		}
		catch (Exception e) 
		{
			image = TakeScreenshot(extentTest, "UIResult");
			System.out.println("Exception occured while Fetching Data");
			e.printStackTrace();
		}
	}
	
	/**
	 * 
	 * 
	 */

	public void search(ParameterMaintenanceObjects objParameterMaintenanceObjects, WebElement Button,
			ExtentTest extentTest) throws Exception {

		//SwitchFrame(objParameterMaintenanceObjects.frame);
		try {

			// selectByVisibleText(TaskMaintenanceObjects.KronosDepartment,dropdown);
			waitFor(3);
			click(Button);

		} catch (Exception e) {
			image = TakeScreenshot(extentTest, "UIResult");
			System.out.println("Exception occured while Fetching Data");
			e.printStackTrace();
		}
	}

	public void searchlookup(ParameterMaintenanceObjects objParameterMaintenanceObjects, WebElement parameterid,String value,
			WebElement Searchbutton,WebElement selectingtheparameter, ExtentTest extentTest) throws Exception {

		// SwitchFrame(SurveyQuestionReviewObjects.frame);
		try {

			// selectByVisibleText(TaskMaintenanceObjects.KronosDepartment,dropdown);
			
			enterText(parameterid,value);
			waitFor(3);
			click(Searchbutton);
			click(selectingtheparameter);
			


		} catch (Exception e) {
			image = TakeScreenshot(extentTest, "UIResult");
			System.out.println("Exception occured while Fetching Data");
			e.printStackTrace();
		}
	}
	

}
